mixin comment(commentData)
    .comment
        if commentData.postedByAdmin
          em (Posted by admin)
        .date= commentData.date
        .author= commentData.author
        .text= commentData.text

doctype html
html
    head
        title Mixins in Pug
        style.
            .comment {
                font-family: sans-serif;
                line-height:1.5;
                padding:10px;
                border: 1px solid #555;
                width:250px;
            }

            .date { font-size:85% }
            .author { font-size: 110%; font-weight: bold }
            .text { font-size:100% }
    body
        - const c = { postedByAdmin: true, date: '04-02-2024', author: 'Hugo COLLIN', text: "Hey, nice tutorial!" }
          + comment(c)
        - const c2 = { date: '02-02-2022', author: 'Bruce', text: "That was funny!" }
          + comment(c2)
